<!DOCTYPE html>
<html lang="en" data-theme="earnnow">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="font-sans antialiased bg-gradient-to-br from-orange-400 via-orange-300 to-orange-200 min-h-screen flex items-center justify-center p-4">
  
  <!-- Decorative elements -->
  <div class="absolute top-10 left-10 w-20 h-20 bg-yellow-300 rounded-full opacity-40 blur-2xl animate-pulse"></div>
  <div class="absolute bottom-20 right-20 w-32 h-32 bg-yellow-400 rounded-full opacity-30 blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  <div class="absolute top-1/2 right-10 w-16 h-16 bg-orange-300 rounded-full opacity-50 blur-xl"></div>

  <!-- Login Card -->
  <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-12 max-w-md w-full relative z-10">
    
    <!-- Logo & Header -->
    <div class="text-center mb-8">
      <a href="/" class="inline-block mb-6">
        <h1 class="text-4xl font-black gradient-text">EarnNow</h1>
      </a>
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Welcome Back</h2>
      <p class="text-gray-600">Sign in to continue earning cashback</p>
    </div>

    <!-- Error Message -->
    <% if (error) { %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-lg">
        <div class="flex items-center">
          <span class="text-red-500 text-xl mr-2">⚠️</span>
          <p class="text-red-700 font-medium"><%= error %></p>
        </div>
      </div>
    <% } %>

    <!-- Login Form -->
    <form action="/login" method="POST" class="space-y-5">
      
      <!-- Email Input -->
      <div>
        <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          placeholder="you@example.com"
          class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-earnnow-yellow focus:border-transparent transition-all"
        >
      </div>

      <!-- Password Input -->
      <div>
        <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          required
          placeholder="••••••••"
          class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-earnnow-yellow focus:border-transparent transition-all"
        >
      </div>

      <!-- Remember Me & Forgot Password -->
      <div class="flex items-center justify-between">
        <label class="flex items-center">
          <input 
            type="checkbox" 
            name="remember" 
            class="w-4 h-4 text-earnnow-yellow border-gray-300 rounded focus:ring-earnnow-yellow"
          >
          <span class="ml-2 text-sm text-gray-600">Remember me</span>
        </label>
        <a href="#" class="text-sm text-earnnow-yellow hover:underline font-medium">Forgot password?</a>
      </div>

      <!-- Submit Button -->
      <button 
        type="submit"
        class="w-full bg-earnnow-yellow text-earnnow-black font-bold py-4 rounded-xl hover:bg-yellow-500 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
      >
        Sign In
      </button>
    </form>

    <!-- Divider -->
    <div class="relative my-6">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-4 bg-white text-gray-500 font-medium">Or continue with</span>
      </div>
    </div>

    <!-- Social Login Buttons -->
    <div class="grid grid-cols-2 gap-4">
      <button class="flex items-center justify-center gap-2 px-4 py-3 border-2 border-gray-200 rounded-xl hover:border-earnnow-yellow hover:bg-gray-50 transition-all">
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span class="font-semibold text-gray-700">Google</span>
      </button>

      <button class="flex items-center justify-center gap-2 px-4 py-3 border-2 border-gray-200 rounded-xl hover:border-earnnow-yellow hover:bg-gray-50 transition-all">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span class="font-semibold text-gray-700">GitHub</span>
      </button>
    </div>

    <!-- Signup Link -->
    <p class="text-center text-gray-600 mt-8">
      Don't have an account? 
      <a href="/signup" class="text-earnnow-yellow hover:underline font-semibold">Create Account</a>
    </p>
  </div>

  <!-- Back to Home -->
  <a href="/" class="fixed top-6 left-6 text-white hover:text-yellow-300 transition flex items-center gap-2 font-semibold">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    Back to Home
  </a>

</body>
</html>
