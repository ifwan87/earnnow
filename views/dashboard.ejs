<!DOCTYPE html>
<html lang="en" data-theme="earnnow">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="font-sans antialiased bg-gray-50">

  <!-- Navigation -->
  <nav class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between items-center h-16">
        <a href="/" class="text-2xl font-bold gradient-text">EarnNow</a>
        
        <div class="flex items-center gap-6">
          <a href="/merchants" class="text-gray-700 hover:text-earnnow-yellow transition">Merchants</a>
          <a href="/rewards" class="text-gray-700 hover:text-earnnow-yellow transition">Rewards</a>
          <a href="/dashboard" class="text-earnnow-yellow font-semibold">Dashboard</a>
          
          <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
            <div class="text-right">
              <p class="text-sm font-semibold text-gray-900"><%= user.name %></p>
              <p class="text-xs text-gray-500"><%= user.tier %> Member</p>
            </div>
            <div class="w-10 h-10 bg-gradient-to-br from-earnnow-yellow to-orange-400 rounded-full flex items-center justify-center text-white font-bold">
              <%= user.name.charAt(0).toUpperCase() %>
            </div>
            <a href="/logout" class="text-gray-500 hover:text-red-500 transition">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Dashboard Content -->
  <div class="max-w-7xl mx-auto px-4 py-8">
    
    <!-- Welcome Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Welcome back, <%= user.name.split(' ')[0] %>! üëã</h1>
      <p class="text-gray-600">Here's your cashback summary</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      
      <!-- Total Earned -->
      <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-2xl p-6 text-white shadow-lg hover:shadow-xl transition-all">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <span class="text-2xl">üí∞</span>
          </div>
          <span class="text-green-100 text-sm font-medium">All Time</span>
        </div>
        <p class="text-white/80 text-sm font-medium mb-1">Total Earned</p>
        <p class="text-3xl font-bold">RM <%= user.totalEarned.toFixed(2) %></p>
      </div>

      <!-- Available Balance -->
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 text-white shadow-lg hover:shadow-xl transition-all">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <span class="text-2xl">‚úÖ</span>
          </div>
          <span class="text-blue-100 text-sm font-medium">Ready</span>
        </div>
        <p class="text-white/80 text-sm font-medium mb-1">Available Balance</p>
        <p class="text-3xl font-bold">RM <%= user.approvedCashback.toFixed(2) %></p>
      </div>

      <!-- Pending Cashback -->
      <div class="bg-gradient-to-br from-yellow-500 to-orange-500 rounded-2xl p-6 text-white shadow-lg hover:shadow-xl transition-all">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <span class="text-2xl">‚è≥</span>
          </div>
          <span class="text-yellow-100 text-sm font-medium">Tracking</span>
        </div>
        <p class="text-white/80 text-sm font-medium mb-1">Pending Cashback</p>
        <p class="text-3xl font-bold">RM <%= user.pendingCashback.toFixed(2) %></p>
      </div>

      <!-- Current Tier -->
      <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl p-6 text-white shadow-lg hover:shadow-xl transition-all">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <span class="text-2xl"><%= user.tier === 'Gold' ? 'üëë' : user.tier === 'Silver' ? 'üíé' : '‚≠ê' %></span>
          </div>
          <span class="text-purple-100 text-sm font-medium">Tier</span>
        </div>
        <p class="text-white/80 text-sm font-medium mb-1">Current Tier</p>
        <p class="text-3xl font-bold"><%= user.tier %></p>
        <% 
          const nextTier = user.tier === 'Starter' ? 'Silver' : user.tier === 'Silver' ? 'Gold' : null;
          const nextTierAmount = user.tier === 'Starter' ? 200 : user.tier === 'Silver' ? 1000 : null;
          const progress = nextTierAmount ? Math.min((user.totalEarned / nextTierAmount) * 100, 100) : 100;
        %>
        <% if (nextTier) { %>
          <div class="mt-3">
            <div class="flex justify-between text-xs text-white/80 mb-1">
              <span>RM <%= user.totalEarned.toFixed(0) %></span>
              <span>RM <%= nextTierAmount %></span>
            </div>
            <div class="w-full bg-white/20 rounded-full h-2">
              <div class="bg-white rounded-full h-2 transition-all" style="width: <%= progress %>%"></div>
            </div>
            <p class="text-xs text-white/70 mt-1">RM <%= (nextTierAmount - user.totalEarned).toFixed(2) %> to <%= nextTier %></p>
          </div>
        <% } else { %>
          <p class="text-xs text-white/70 mt-3">üéâ Maximum tier achieved!</p>
        <% } %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-2xl shadow-md p-6 mb-8">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/merchants" class="flex flex-col items-center p-4 rounded-xl border-2 border-gray-200 hover:border-earnnow-yellow hover:bg-yellow-50 transition-all group">
          <span class="text-4xl mb-2 group-hover:scale-110 transition-transform">üõçÔ∏è</span>
          <span class="text-sm font-semibold text-gray-700 group-hover:text-earnnow-yellow">Browse Stores</span>
        </a>
        
        <button onclick="openAddTransactionModal()" class="flex flex-col items-center p-4 rounded-xl border-2 border-gray-200 hover:border-earnnow-yellow hover:bg-yellow-50 transition-all group">
          <span class="text-4xl mb-2 group-hover:scale-110 transition-transform">‚ûï</span>
          <span class="text-sm font-semibold text-gray-700 group-hover:text-earnnow-yellow">Add Transaction</span>
        </button>
        
        <a href="/rewards" class="flex flex-col items-center p-4 rounded-xl border-2 border-gray-200 hover:border-earnnow-yellow hover:bg-yellow-50 transition-all group">
          <span class="text-4xl mb-2 group-hover:scale-110 transition-transform">üéÅ</span>
          <span class="text-sm font-semibold text-gray-700 group-hover:text-earnnow-yellow">View Rewards</span>
        </a>
        
        <a href="/tiers" class="flex flex-col items-center p-4 rounded-xl border-2 border-gray-200 hover:border-earnnow-yellow hover:bg-yellow-50 transition-all group">
          <span class="text-4xl mb-2 group-hover:scale-110 transition-transform">üëë</span>
          <span class="text-sm font-semibold text-gray-700 group-hover:text-earnnow-yellow">Tier Benefits</span>
        </a>
      </div>
    </div>

    <!-- Recent Transactions -->
    <div class="bg-white rounded-2xl shadow-md p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-gray-900">Recent Transactions</h3>
        <a href="/rewards" class="text-earnnow-yellow hover:underline font-medium text-sm">View All ‚Üí</a>
      </div>

      <% if (transactions && transactions.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-200">
                <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Merchant</th>
                <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Date</th>
                <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700">Amount</th>
                <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700">Cashback</th>
                <th class="text-center py-3 px-4 text-sm font-semibold text-gray-700">Status</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.slice(0, 5).reverse().forEach(transaction => { %>
                <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                  <td class="py-4 px-4">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                        <span class="text-lg"><%= transaction.merchant.charAt(0) %></span>
                      </div>
                      <span class="font-medium text-gray-900"><%= transaction.merchant %></span>
                    </div>
                  </td>
                  <td class="py-4 px-4 text-sm text-gray-600">
                    <%= new Date(transaction.date).toLocaleDateString('en-MY', { month: 'short', day: 'numeric' }) %>
                  </td>
                  <td class="py-4 px-4 text-right font-medium text-gray-900">RM <%= transaction.amount.toFixed(2) %></td>
                  <td class="py-4 px-4 text-right font-semibold text-green-600">+RM <%= transaction.cashbackAmount.toFixed(2) %></td>
                  <td class="py-4 px-4 text-center">
                    <% if (transaction.status === 'approved') { %>
                      <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-700">
                        <span>‚úì</span> Approved
                      </span>
                    <% } else { %>
                      <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-700">
                        <span>‚è≥</span> Pending
                      </span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">üõçÔ∏è</div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">No transactions yet</h4>
          <p class="text-gray-600 mb-4">Start shopping to earn cashback!</p>
          <a href="/merchants" class="inline-block bg-earnnow-yellow text-earnnow-black font-semibold px-6 py-3 rounded-lg hover:bg-yellow-500 transition">
            Browse Merchants
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Add Transaction Modal -->
  <div id="addTransactionModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-8">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-2xl font-bold text-gray-900">Add Test Transaction</h3>
        <button onclick="closeAddTransactionModal()" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <form id="addTransactionForm" class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Merchant</label>
          <select name="merchant" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-earnnow-yellow">
            <option value="Shopee">Shopee</option>
            <option value="Lazada">Lazada</option>
            <option value="Agoda">Agoda</option>
            <option value="Booking.com">Booking.com</option>
            <option value="Expedia">Expedia</option>
            <option value="Foodpanda">Foodpanda</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Purchase Amount (RM)</label>
          <input type="number" name="amount" step="0.01" required placeholder="100.00" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-earnnow-yellow">
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Cashback Rate (%)</label>
          <input type="number" name="cashbackRate" step="0.1" required placeholder="5.0" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-earnnow-yellow">
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
          <select name="status" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-earnnow-yellow">
            <option value="pending">Pending</option>
            <option value="approved">Approved</option>
          </select>
        </div>

        <button type="submit" class="w-full bg-earnnow-yellow text-earnnow-black font-bold py-4 rounded-xl hover:bg-yellow-500 transition-all">
          Add Transaction
        </button>
      </form>
    </div>
  </div>

  <script>
    function openAddTransactionModal() {
      document.getElementById('addTransactionModal').classList.remove('hidden');
    }

    function closeAddTransactionModal() {
      document.getElementById('addTransactionModal').classList.add('hidden');
    }

    document.getElementById('addTransactionForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch('/api/add-transaction', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        console.error('Error adding transaction:', error);
      }
    });
  </script>

</body>
</html>
