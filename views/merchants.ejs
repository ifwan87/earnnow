<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
</head>
<body class="bg-gray-50">

  <!-- Navigation -->
  <nav class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between items-center h-16">
        <a href="/" class="text-2xl font-bold gradient-text">EarnNow</a>

        <div class="flex items-center gap-6">
          <a href="/merchants" class="text-earnnow-yellow font-semibold">Merchants</a>
          <a href="/rewards" class="text-gray-700 hover:text-earnnow-yellow transition">Rewards</a>
          <a href="/dashboard" class="text-gray-700 hover:text-earnnow-yellow transition">Dashboard</a>

          <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
            <div class="text-right">
              <p class="text-sm font-semibold text-gray-900"><%= user.name %></p>
              <p class="text-xs text-gray-500"><%= user.tier %> Member</p>
            </div>
            <div class="w-10 h-10 bg-gradient-to-br from-earnnow-yellow to-orange-400 rounded-full flex items-center justify-center text-white font-bold">
              <%= user.name.charAt(0).toUpperCase() %>
            </div>
            <a href="/logout" class="text-gray-500 hover:text-red-500 transition">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="max-w-7xl mx-auto px-4 py-8">

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Popular Stores üõçÔ∏è</h1>
      <p class="text-gray-600">Shop from your favorite brands and earn cashback</p>
    </div>

    <!-- Merchants Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">

      <% merchants.forEach(merchant => { %>
        <a href="<%= merchant.url %>" target="_blank" rel="noopener noreferrer" class="bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-300 transform hover:-translate-y-1 overflow-hidden group">
          <div class="p-3">
            <!-- Badge -->
            <% if (merchant.badge) { %>
              <div class="mb-1">
                <span class="inline-block bg-blue-500 text-white text-[10px] font-bold px-1.5 py-0.5 rounded-full">
                  <%= merchant.badge %>
                </span>
              </div>
            <% } %>

            <!-- Logo -->
            <div class="flex items-center justify-center h-9 mb-2 bg-gray-50 rounded p-2">
              <img src="<%= merchant.logo %>" alt="<%= merchant.name %>" class="max-h-full max-w-full object-contain">
            </div>

            <!-- Name -->
            <h3 class="text-xs font-bold text-gray-900 mb-1 text-center line-clamp-1"><%= merchant.name %></h3>

            <!-- Cashback -->
            <div class="text-center mb-1">
              <p class="text-sm font-bold text-green-600"><%= merchant.cashback %></p>
              <% if (merchant.tier) { %>
                <p class="text-[10px] text-gray-500 mt-0.5">
                  <span class="inline-flex items-center gap-1 px-1.5 py-0.5 rounded-full bg-yellow-100 text-yellow-700 font-semibold">
                    <%= merchant.tier %>
                  </span>
                  <% if (merchant.bonus) { %>
                    <span class="ml-1 text-orange-600 text-[10px]"><%= merchant.bonus %></span>
                  <% } %>
                </p>
              <% } %>
            </div>

            <!-- Category -->
            <p class="text-[10px] text-gray-500 text-center mb-2"><%= merchant.category %></p>

            <!-- Shop Now Button -->
            <div class="text-center">
              <span class="inline-block bg-earnnow-yellow text-earnnow-black font-semibold px-3 py-1 rounded text-xs group-hover:bg-yellow-500 transition-all">
                Shop Now ‚Üí
              </span>
            </div>
          </div>
        </a>
      <% }) %>

    </div>
  </div>

</body>
</html>