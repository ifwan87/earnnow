{
  "name": "earnnow",
  "version": "1.0.0",
  "description": "EarnNow - Shop and earn real cashback first, crypto when you're ready",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "setup": "npm install express-session cookie-parser bcryptjs && node server.js",
    "build": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "postinstall": "npm run build"
  },
  "keywords": ["cashback", "rewards", "web3", "base-chain"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "dotenv": "^16.3.1",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  }
}
